<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>07_hello_servlet</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.xhtml</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.xhtml</welcome-file>
  </welcome-file-list>
  
  <context-param>
  	<param-name>driver</param-name>
  	<param-value>org.mariadb.jdbc.Driver</param-value>
  </context-param>
  
  <servlet>
  	<servlet-name>HelloServletOld</servlet-name>
  	<servlet-class>com.hk.hello.HelloServletOld</servlet-class>
  	<init-param>
  		<param-name>name</param-name>
  		<param-value>지훈</param-value>
  	</init-param>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>HelloServletOld</servlet-name>
  	<url-pattern>/HelloServletOld.do</url-pattern>
  </servlet-mapping>
  
  <filter>
  	<filter-name>EncodeFilter</filter-name>
  	<filter-class>com.hk.hello.EncodeFilter</filter-class>
  	<init-param>
  		<param-name>encoding</param-name>
  		<param-value>utf-8</param-value>
  	</init-param>
  </filter>
  <filter-mapping>
  	<filter-name>EncodeFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  
</web-app>