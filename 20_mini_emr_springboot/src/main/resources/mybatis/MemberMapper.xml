<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.hk.emr.mapper.MemberMapper">
	
	<insert id="addUser" parameterType="memberDto">
		INSERT INTO USER_ACCOUNT
		VALUES(NULL,#{userName},#{password},#{name},#{role})
	</insert>
	
	<select id="idChk" parameterType="String" resultType="String">
		SELECT username FROM USER_ACCOUNT WHERE username = #{id}
	</select>
	
	<select id="findAllAccounts" resultType="memberDto">
		SELECT username,name,role FROM USER_ACCOUNT
	</select>
	
	<select id="loginUser" parameterType="String" resultType="memberDto">
		SELECT user_id AS userid, username, name, password, role
		FROM USER_ACCOUNT
		WHERE username = #{id}
	</select>
	
</mapper>